---
import "/src/global.css";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Modal from "@components/Modal.astro";
import FormService from "@components/forms/FormService.astro";
import { Image } from "astro:assets";
import PreloaderImage from "../../public/preloader.gif";
import { getLangFromUrl } from "../i18n/utils";
import useTranslations from "@i18n/translation";

const lang = getLangFromUrl(Astro.url);

interface Props {
  title: string;
}

const { title } = Astro.props;

const ui = {
  en: {
    "preloader.text": "Loading...",
    "modal.title": "Leave a request and we will contact you within one business day",
  },
  ru: {
    "preloader.text": "Загрузка...",
    "modal.title": "Оставьте заявку и мы свяжемся с вами в течение рабочего дня",
  },
} as const;

const t = useTranslations(lang, ui);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="title" content={title} />
    <meta name="description" content={title} />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="preloader">
      <Image src={PreloaderImage} alt={t("preloader.text")} width="120" height="40" />
    </div>

    <div id="container">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>

    <Modal>
      <Fragment slot="title" set:html={t("modal.title")}></Fragment>
      <Fragment slot="content"><FormService /></Fragment>
    </Modal>
  </body>
</html>

<script>
  window.addEventListener("load", function () {
    var preloader = document.getElementById("preloader");
    var container = document.getElementById("container");

    setTimeout(() => {
      preloader.style.display = "none";
      container.style.opacity = "1";
    }, 1500);
  });
</script>

<style>
  #container {
    opacity: 0;
    transition: opacity 600ms linear;
  }
</style>
