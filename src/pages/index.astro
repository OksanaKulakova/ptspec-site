---
import Layout from "@layouts/Layout.astro";
import Widget from "@components/Widget.astro";
import List from "@components/List.astro";
import Cards from "@components/Cards.astro";
import Tabs from "@components/Tabs.astro";
import services from "@data/services.json";

type cardWidget = {
  title: string;
  text: string;
};

const cardsForWidget: cardWidget[] = [
  {
    title: "2015",
    text: "С 2015 года <br> копим опыт и экспертизу <br> в строительстве",
  },
  {
    title: "100+",
    text: "Более 100 <br> реализованных <br> проектов",
  },
  {
    title: "30+",
    text: "Более 30 <br> регионов <br> присутствия",
  },
];

const list = services.map((item) => ({
  ...item,
  href: `/services/${item.slug}/`,
}));

type card = {
  classList?: string;
  title?: string;
  caption?: string;
  link?: string;
  href?: string;
  imagePath?: string;
  altText?: string;
};

const cards1: card[] = [
  {
    classList: "card--white",
    title: "Проекты",
    caption: "гордимся каждым <br> проектом",
    link: "Смотреть проекты",
    href: "/projects/",
  },
  {
    classList: "card--black",
    title: "заявка",
    caption: "Поможем с выбором <br> услуги",
    link: "оставить заявку",
    href: "#",
  },
];

const cards2: card[] = [
  {
    classList: "card--image",
    imagePath: "/src/assets/images/cover2.jpg",
    altText: "Картинка",
  },
  {
    classList: "card--white",
    title: "карьера",
    caption: "Активно развиваемся <br> и ищем таланты",
    link: "Карьера в компании",
    href: "/career/",
  },
];
---

<Layout title="ГЛАВНАЯ">
  <Widget
    title="Входим в Топ-20 <br> инжиниринговых <br> компаний России"
    subtitle="Предоставляем полный спектр <br> инжиниринговых услуг <br> в промышленном и гражданском <br> строительстве"
    imagePath="/src/assets/images/cover1.jpg"
    altText="Картинка для баннера"
    href="/company/"
    cards={cardsForWidget}
  />

  <List title="Эффективно решаем <br> поставленные задачи" list={list} />

  <Cards cards={cards1} />

  <Tabs
    title="Заказчики <br> и благодарности"
    tab1="Заказчики"
    tab2="Благодарности"
  >
    <Fragment slot="tabcontent-1">content 1</Fragment>
    <Fragment slot="tabcontent-2">content 2</Fragment>
  </Tabs>

  <Cards cards={cards2} />
</Layout>
