---
import Layout from "@layouts/Layout.astro";
import Widget from "@components/Widget.astro";
import SimpleList from "@components/SimpleList.astro";

type cardWidget = {
  title: string;
  text: string;
};

const cardsForWidget: cardWidget[] = [
  {
    title: "Топ–20",
    text: "Входим в Топ–20 <br> инжиниринговых <br> компаний России",
  },
  {
    title: "300+",
    text: "Более 300 <br> специалистов <br> в штате",
  },
  {
    title: "9+",
    text: "Более 9 <br> лет опыта и экспертизы <br> в строительстве",
  },
];

type ListItem = {
  title: string;
  text: string;
};

const list: ListItem[] = [
  {
    title: "Используем собственный онлайн–сервис",
    text: "Онлайн-сервис «Cobalt» упрощает процесс подготовки исполнительной документации, сокращает сроки работ и позволяет сэкономить на привлечении дополнительного штата специалистов.",
  },
  {
    title: "Работаем с лучшими специалистами",
    text: "В компании работает более 300 человек с релевантным опытом работы, проходящих постоянное обучение и повышение квалификации. Независимо от этапа строительства, ориентируясь на запросы заказчиков, оперативно формируем команду проекта для решения требуемых технических задач.",
  },
  {
    title: "Гарантируем качество оказываемых услуг",
    text: "Контролируем процесс подготовки и сроки выполнения работ. Определяем контрольные срезы и форматы отчётности о проделанной работе. В спорных ситуациях обеспечиваем поддержку и разделяем ответственность.",
  },
  {
    title: "Имеем все необходимые ресурсы для осуществления работ",
    text: "Наша компания имеет лицензию министерства культуры и СРО на проектирование, изыскание, строительные работы. Также наличие собственного автопарка, геодезического оборудования и оргтехники позволяет качественно оказывать услуги.",
  },
];
---

<Layout title="КОМПАНИЯ">
  <Widget
    title="Компания"
    subtitle="ответственно подходим <br> к решению задач <br> и имеем большой опыт <br> реализации крупных проектов"
    imagePath="/src/assets/images/cover3.jpg"
    altText="Картинка для баннера"
    link="Ознакомиться с услугами"
    href="/services/"
    cards={cardsForWidget}
  />

  <section class="section">
    <h2 class="title">преимущества <br /> нашей компании</h2>
    <SimpleList list={list} />
  </section>
</Layout>
