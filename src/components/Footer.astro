---
import Social from "@components/Social.astro";
import LanguagePicker from "./LanguagePicker.astro";

const currentYear = new Date().getFullYear();

import {
  getLangFromUrl,
  useTranslations,
} from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="footer">
  <div class="footer-block">
    <div class="footer-switch">
      <a class="footer-link link" href="/passport.pdf" target="_blank">
        {t("footer.link")}
      </a>
    </div>
    <div class="contacts">
      <div class="contact">
        <div class="contact-title">{t("footer.contacts")}</div>
        <div class="contact-text">
          <a class="contact-link link" href="mailto:info@ptspec.ru"
            >info@ptspec.ru</a
          >
          <a class="contact-link link" href="tel:+73422700028"
            >+7 342 270 0028</a
          >
        </div>
      </div>
      <div class="contact">
        <div class="contact-title">{t("footer.address")}</div>
        <div class="contact-text">
          <span>{t("footer.city")}</span><br />
          <span>{t("footer.srteet")}</span><br />
          <span>9:00 – 18:00</span>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-block footer-action">
    <div class="footer-button">
      <button class="btn show-modal">{t("footer.order")}</button>
    </div>
    <div class="footer-sign" set:html={t("footer.order-sign")}></div>
  </div>
  <div class="footer-block">
    <div class="footer-social">
      <Social size={48} />
    </div>
    <div class="footer-info">
      <div class="footer-org">© {t("footer.company")} {currentYear}</div>
      <LanguagePicker class="footer-link" />
    </div>
  </div>
</footer>

<style>
  .footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 48px 16px 16px 16px;
    gap: 96px;
  }

  .footer-block {
    display: flex;
    gap: 16px;
    width: 100%;
  }

  .footer-block > * {
    flex: 1 1 0;
  }

  .footer-switch {
    display: none;
  }

  /* .footer-link {
    color: #161619;
    transition: all 0.25s linear;
  }

  .footer-link:hover {
    color: #fe5639;
  } */

  .footer-action {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
    max-width: 480px;
    padding-bottom: 48px;
  }

  .footer-sign {
    color: rgba(22, 22, 25, 0.5);
    text-align: center;
  }

  .footer-social {
    display: none;
  }

  .footer-info {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: 16px;
  }

  .footer-org {
    color: rgba(22, 22, 25, 0.5);
  }

  :global(.footer-link) {
    padding: 0;
    height: 24px;
  }

  .contacts {
    display: flex;
    gap: 16px;
  }

  .contact {
    flex: 1 1 0;
  }

  .contact-title {
    margin-bottom: 8px;
    color: rgba(22, 22, 25, 0.5);
  }

  .contact-link {
    display: block;
    width: fit-content;
    height: 24px;
    padding: 0;
    text-decoration: none;
  }

  @media screen and (min-width: 1025px) {
    .footer {
      padding: 96px 32px 32px 32px;
      gap: 192px;
    }

    .footer-switch {
      display: block;
    }

    .footer-switch .footer-link {
      padding-top: 0;
      padding-bottom: 16px;
      height: 40px;
    }

    .footer-action {
      max-width: 560px;
      margin: auto;
      padding-bottom: 56px;
    }

    .footer-sign {
      width: calc(50% - 16px);
      margin-left: auto;
      text-align: left;
    }

    .footer-social {
      display: block;
      height: 48px;
    }

    .footer-org {
      padding-top: 16px;
    }

    :global(.footer-link) {
      padding-top: 16px;
      height: 40px;
    }
  }

  @media screen and (min-width: 1921px) {
    .footer {
      padding: 12vh 32px 4vh 32px;
      gap: 24vh;
    }

    .footer-switch .footer-link {
      padding-top: 0;
      padding-bottom: 2vh;
      height: 5vh;
    }

    .footer-action {
      max-width: 60vh;
      padding-bottom: 7vh;
      gap: 2vh;
    }

    .footer-sign {
      width: calc(50% - 2vh);
    }

    .footer-org {
      padding-top: 2vh;
    }

    .footer-block {
      gap: 2vh;
    }

    .footer-block:last-child {
      align-items: flex-end;
    }

    :global(.footer-link) {
      padding-top: 2vh;
      height: 5vh;
    }

    .contact-link {
      height: 3vh;
    }
  }
</style>
