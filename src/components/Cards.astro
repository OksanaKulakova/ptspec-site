---
interface Props {
  cards: Array<Card>;
}

interface Card {
  classList?: string;
  title?: string;
  caption?: string;
  link?: string;
  href?: string;
  imagePath?: string;
  altText?: string;
}

const { cards } = Astro.props;

import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/images/*.{jpeg,jpg,png,gif}",
);
---

<section class="cards">
  {
    cards.map((card: Card) => (
      <div class="card" class:list={[card.classList]}>
        {card.caption && (
          <div class="card-block">
            <div set:html={card.caption} class="card-caption" />
          </div>
        )}
        {card.title && <h2 class="card-title title">{card.title}</h2>}
        {card.href && (
          <div class="card-block">
            <a class="card-link link" href={card.href}>
              {card.link}
            </a>
          </div>
        )}

        {card.imagePath && (
          <Picture
            src={images[card.imagePath]()}
            formats={["jpeg", "webp"]}
            alt={card.altText}
          />
        )}
      </div>
    ))
  }
</section>

<style>
  .cards {
    display: flex;
    flex-direction: column;
    padding: 48px 0;
  }

  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    width: 100%;
    min-height: 320px;
  }

  .card--white {
    width: calc(100% - 32px);
    margin-left: 16px;
    margin-right: 16px;
  }

  .card--white::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: #161619;
  }

  .card--white::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background-color: #161619;
  }

  .card:last-child.card--white::before {
    display: none;
  }

  .card:first-child.card--white::after {
    display: none;
  }

  .card--black {
    padding: 0 16px;
    background-color: #161619;
    color: #faf8f8;
  }

  .card--black .card-link {
    color: #faf8f8;
  }

  .card--black .card-link:hover {
    color: #FE5639;
  }

  .card-block {
    display: flex;
    width: 100%;
    min-height: 140px;
  }

  .card-block:last-child {
    align-items: flex-end;
  }

  .card-caption {
    max-width: 50%;
    padding-top: 16px;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.48px;
    text-transform: uppercase;
  }

  .card-title {
    margin: auto;
    text-align: center;
  }

  .card--image {
    width: calc(100% - 32px);
    margin-left: 16px;
    margin-right: 16px;
  }

  .card--image img {
    width: 100%;
    height: 320px;
    object-fit: cover;
    vertical-align: top;
  }

  @media screen and (min-width: 1024px) {
    .cards {
      flex-direction: row;
      padding: 96px 0;
    }

    .card {
      min-height: 560px;
    }

    .card-block {
      min-height: 244px;
    }

    .card--white {
      width: calc(100% - 64px);
      margin-left: 32px;
      margin-right: 0;
    }

    .card:last-child.card--white {
      width: calc(100% - 32px);
      margin-left: 0;
      margin-right: 32px;
      padding-left: 16px;
    }

    .card:last-child.card--white::before {
      display: block;
    }

    .card:first-child.card--white::after {
      display: block;
    }

    .card:first-child.card--image {
      width: calc(100% - 64px);
      margin-left: 32px;
      margin-right: 0;
    }

    .card--image img {
      height: 560px;
    }
  }
</style>
