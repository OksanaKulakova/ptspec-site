<form class="form" method="POST">
  <div class="form-body">
    <div class="form-block">
      <div class="form-blok-title">Как к вам обращаться</div>
      <div class="form-row">
        <input type="text" name="name" placeholder="Имя" required />
        <input type="email" name="email" placeholder="Фамилия"/>
      </div>
    </div>
    <div class="form-block">
      <div class="form-blok-title">Контакты</div>
      <div class="form-row">
        <input type="text" name="name" placeholder="Номер телефона" required />
        <input type="email" name="email" placeholder="Электронная почта"/>
      </div>
    </div>
    <div class="form-block">
      <div class="form-blok-title">Комментарий</div>
      <div class="form-row">
        <input type="email" name="email" placeholder="Напишите что–то по необходимости"/>
      </div>
    </div>
    <button class="btn">Отправить заявку</button>
  </div>
</form>

<style>
  .form {
    position: relative;
    padding-top: 16px;
  }

  .form::after {
    content: "";
    position: absolute;
    top: 0;
    width: 100%;
    height: 1px;
    background-color: #161619;
  }

  .form-body {
    display: flex;
    flex-direction: column;
    gap: 32px;
    width: 100%;
  }

  .form-block-title {
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.48px;
    text-transform: uppercase;
  }

  @media screen and (min-width: 1024px) {
    .form-body {
      gap: 64px;
      width: calc(50% - 8px);
      margin-left: auto;
    }

    .form-block-title {
      font-size: 24px;
      line-height: 32px; 
      letter-spacing: -1.44px;
    }

    .form-row {
      display: flex;
      gap: 16px;
    }
  }
</style>